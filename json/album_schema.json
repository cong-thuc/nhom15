{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Album",
  "type": "object",
  "properties": {
    "albums": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "album_id": { "type": "integer", "minimum": 1 },
          "ten_album": { "type": "string" },
          "ngay_phat_hanh": { "type": "string", "format": "date" },
          "anh_bia": { "type": "string" }
        },
        "required": ["album_id", "ten_album", "ngay_phat_hanh"]
      }
    }
  },
  "required": ["albums"]
}
