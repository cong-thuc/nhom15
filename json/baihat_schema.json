{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BaiHat",
  "type": "object",
  "properties": {
    "baihats": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "baihat_id": { "type": "integer", "minimum": 1 },
          "tieu_de": { "type": "string" },
          "thoi_luong": { "type": "number", "minimum": 1 },
          "ngay_phat_hanh": { "type": "string", "format": "date" },
          "duong_dan_file": { "type": "string" },
          "album_id": { "type": "integer", "minimum": 1 },
          "theloai_id": { "type": "integer", "minimum": 1 }
        },
        "required": ["baihat_id", "tieu_de", "thoi_luong", "ngay_phat_hanh", "album_id", "theloai_id"]
      }
    }
  },
  "required": ["baihats"]
}
